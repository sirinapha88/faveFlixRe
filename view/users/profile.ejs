<!DOCTYPE html>
<html>
<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.6/cerulean/bootstrap.min.css" rel="stylesheet" integrity="sha256-Ucf/ylcKTNevYP6l7VNUhGLDRZPQs1+LsbbxuzMxUJM= sha512-FW2XqnqMwERwg0LplG7D64h8zA1BsxvxrDseWpHLq8Dg8kOBmLs19XNa9oAajN/ToJRRklfDJ398sOU+7LcjZA==" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css" media="screen" title="no title" charset="utf-8">
    <meta charset="UTF-8">
    <title>faveFlix</title>    
</head>
<body>
  <div class="container">
    <div class='header'>
        <h1><a href="/">faveFlix</a><img class='logo' src="https://image.freepik.com/free-icon/eye-outline-variant-with-heart-shaped-center_318-47710.jpg" alt="heart-eye" style="width:50px;height:50px;"></h1>
    </div>
   <nav class="navbar navbar-default" id='navbar'>
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav" id='left-nav-items'>
                  <li><a href="/tvshows/popular">Popular</a>
                  </li>
                  <li><a href="/tvshows/topRated">Highly Rated</a>
                  </li>
              </ul>
                  <ul class='nav navbar-nav navbar-right'>
                    <% if(usershow[0] === undefined){ %>
                      <li style="color:white;" id='noUsername'> Welcome!
                      </li>
                    <% } else { %>
                      <li style="color:white;" id='username'> Welcome <%= usershow[0].name%>
                      </li>
                    <% } %>
                    <li id='logout'><a href="/users/logout">Logout</a>
                    </li>
                  </ul>
          </div>
    </nav>
    
    <div class='row'>
      <div class='col-md-3'></div>
        <div class='col-md-6' id="index-custom-search-input">
          <div class='input-group' id='search-box'>
              <form action="/tvshows/search" method="get" id='tvSearch'>
                  <label for="tvshow"></label>
                  <input type="text" id='tvshow' name="tvshow" placeholder="   Search..." required>
                  <input type="submit" class="fa fa-search" value= '&#xf002' id='searchBtn'>
              </form>
            <div id="q-results" class="results"></div>
          </div>
      </div>
    </div>

    <div class='row'>
        <h2 ID='favorites'> Your Favorite TV Shows
          <button type="button" class="btn btn-default btn-lg" id='favorite'>
                <a href="/users/profile"
                    <span class="fa fa-heart" style="color:#46b8da;"></span>
                </a>
          </button>
        </h2>
        <div class='col-md-12' id='index-poster-rows'>
        <% myshows.forEach(function(myshow){ %>
        <div>
           <img id ='index-posters'src="http://image.tmdb.org/t/p/w500<%= myshow.poster %>" height="360" width="260" >
          <h4 id='title'> <%= myshow.name%> 
          </h4>
          <h6 id='rating'> Rating: <%= myshow.vote_average %>
              <button type="button" class="btn btn-default btn-lg" id='watchMe'>
                  <a href="/users/profile"
                  <span class="fa fa-eye" style="color:#46b8da;" data-tmdbID="<%=myshow.id %>"></span></a>
              </button>
          </h6>
        </div>
       <% }) %>
      </div>
    </div>
</body>
</html>